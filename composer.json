{
	"name": "mediawiki/phan-utils",
	"description": "Utilities for phan to be used in plugins, originally developed for taint-check-plugin",
	"keywords": [
		"php",
		"static",
		"analyzer",
		"phan"
	],
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Brian Wolff",
			"email": "bawolff+wn@gmail.com"
		},
		{
			"name": "Daimona Eaytoy",
			"email": "daimona.wiki@gmail.com"
		}
	],
	"require": {
		"phan/phan": "^2.6.1",
		"php": "^7.2.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "30.0.0",
		"mediawiki/minus-x": "1.1.0",
		"php-parallel-lint/php-parallel-lint": "1.2.0",
		"php-parallel-lint/php-console-highlighter": "0.5.*"
	},
	"autoload": {
		"psr-4": {
			"MediaWikiPhanUtils\\": "src/"
		}
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpcs -p -s",
			"minus-x check .",
			"phan -d . --long-progress-bar"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	},
	"minimum-stability": "stable"
}
